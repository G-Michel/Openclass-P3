{% include '/misc/header.html.twig'%}
<div class="container">
	<article class="col-md-12">
	<h1 class="text-warning">Editer Commentaire</h1><br/>
	<form class="panel col-md-offset-2 col-md-8 col-sm-12 form" action="/admin/commHandler" method="POST">
		<input type="hidden" name="id" value="{{comment.getID()}}">
		<input type="hidden" name="route" value="{{route}}">
	<h4>Commentaire</h4>
	<p>Auteur :<br/> 
		<input class="form-control" type="text" name="author" value="{{comment.getAuthor}}" required>
	</p>
	<p>Commentaire :<br/></p>
		<textarea class="form-control" name="content" rows="3" required>{{comment.getContent}}</textarea><br/>
		<input type="submit" name="submit" value="Editer"><br/><br/>
	</form>
</article>
</div>
{% include '/misc/footer.html.twig'%}